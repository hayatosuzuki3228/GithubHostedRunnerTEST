<UserControl x:Class="Hutzper.Library.Wpf.ImagePreview"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:conv="clr-namespace:Hutzper.Library.Wpf.Utils"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300"
             x:Name="root">

    <Border BorderBrush="#DDDDDD" 
            BorderThickness="1" 
            Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <!-- ヘッダー部分 -->
                <RowDefinition Height="Auto"/>
                <!-- プレビュー領域 -->
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ヘッダー -->
            <Border Grid.Row="0" 
                    Background="#F5F5F5" 
                    Padding="8,4">
                <TextBlock Text="画像プレビュー" 
                           FontSize="{StaticResource Xs}"/>
            </Border>

            <!-- プレビュー領域のコンテナ -->
            <Border Grid.Row="1" 
                    Background="LightGray">
                <!-- アスペクト比を維持するためのビューポート -->
                <Viewbox Stretch="Uniform" 
                         StretchDirection="DownOnly">
                    <!-- 固定アスペクト比のコンテナ -->
                    <Grid Width="300" 
                          Height="400" 
                          x:Name="ImageCanvas" 
                          MouseDown="Image_MouseDown">

                        <!-- プレビュー画像 -->
                        <Image x:Name="SampleImage" 
                               Stretch="Uniform"
                               SizeChanged="Image_SizeChanged"/>

                        <!-- オーバーレイキャンバス -->
                        <Canvas x:Name="MyCanvas" 
                                Visibility="{Binding ShowArea, 
                                           Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Polygon Stroke="Black" 
                                     StrokeThickness="2" 
                                     Fill="#4CADD8E6">
                                <Polygon.Points>
                                    <MultiBinding Converter="{StaticResource PointsConverter}" />
                                </Polygon.Points>
                            </Polygon>
                        </Canvas>
                    </Grid>
                </Viewbox>
            </Border>
        </Grid>
    </Border>
</UserControl>